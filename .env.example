# =====================================================
# ORION FRAMEWORK v2.0 - CONFIGURATION
# =====================================================

# --- CORE SETTINGS ---
SESSION_NAME=session
PREFIX=!
DEFAULT_COOLDOWN=3

# Owner Numbers (comma separated, without +)
OWNER_NUMBERS=6281234567890,6289876543210

# --- BUILTIN COMMANDS ---
BUILTIN_COMMAND_PING_ENABLED=true
BUILTIN_COMMAND_ADD_ENABLED=true
BUILTIN_COMMAND_REMOVE_ENABLED=true

# --- GROUP EVENTS (Welcome & Goodbye) ---
BUILTIN_WELCOMER_ENABLED=true
BUILTIN_WELCOMER_MESSAGE="Hai %%mention%%! Selamat datang di %%group%%. Jangan lupa baca deskripsi ya!"

BUILTIN_GOODBYE_ENABLED=true
BUILTIN_GOODBYE_MESSAGE="Yah, %%mention%% meninggalkan kita..."

# --- QUEUE SYSTEM (Rate Limiting) ---
QUEUE_ENABLED=true

# Global Queue (controls all commands from all users)
QUEUE_GLOBAL_CONCURRENCY=20
QUEUE_GLOBAL_INTERVAL_CAP=60
QUEUE_GLOBAL_INTERVAL=1000

# Per-User Queue (controls single user)
QUEUE_PER_USER_CONCURRENCY=1
QUEUE_PER_USER_INTERVAL_CAP=3
QUEUE_PER_USER_INTERVAL=1500

# --- RECONNECTION SETTINGS ---
MAX_RECONNECT_ATTEMPTS=5
RECONNECT_BASE_DELAY=1000
RECONNECT_MAX_DELAY=30000

# --- DATABASE (Optional) ---
# MONGO_URI=mongodb://localhost:27017/orion-bot

# --- ADVANCED ---
# LOG_LEVEL=info
# TEMP_DIR=./temp
